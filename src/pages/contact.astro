---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
---

<Layout title="Contact">
  <main class="w-full flex flex-col items-center px-6 md:px-10 lg:px-12 h-dvh">
    <div class="flex flex-col w-full max-w-[1300px] relative h-full">
      <Header />
      <section class="mt-24 md:mt-28 lg:mt-32 flex flex-col items-center">
        <p class="text-3xl md:text-5xl lg:text-6xl text-primary font-medium">
          Contact me
        </p>

        <form
          action="/sendMessage.json"
          class="flex flex-col gap-4 mt-4 min-w-[300px] md:min-w-[500px] items-center"
          method="post"
        >
          <input
            autofocus
            class="min-w-[300px] max-w-[300px] md:min-w-[500px] md:max-w-[400px] rounded-md px-3 py-2 focus:outline-none focus:outline-2 focus:outline-offset-2 focus:outline-accent"
            required
            minlength="3"
            name="name"
            placeholder="Name"
            type="text"
          />
          <input
            class="min-w-[300px] max-w-[300px] md:min-w-[500px] md:max-w-[400px] rounded-md px-3 py-2 focus:outline-none focus:outline-2 focus:outline-offset-2 focus:outline-accent"
            required
            minlength="3"
            name="subject"
            placeholder="Subject"
            type="text"
          />
          <textarea
            class="min-w-[300px] max-w-[300px] md:min-w-[500px] md:max-w-[400px] min-h-[100px] max-h-[300px] rounded-md px-3 py-2 [field-sizing:content] focus:outline-none focus:outline-2 focus:outline-offset-2 focus:outline-accent"
            required
            name="message"
            placeholder="Message"></textarea>
          <div class="w-full flex justify-end">
            <button
              class="text-background bg-primary py-2 px-4 rounded-md hover:bg-primary/85 hover:scale-110 transition-all focus:outline-none focus:outline-2 focus:outline-offset-2 focus:outline-accent"
              >Send</button
            >
          </div>
        </form>
      </section>
    </div>
  </main>
</Layout>
